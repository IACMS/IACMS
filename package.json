{
  "name": "iacms",
  "version": "1.0.0",
  "description": "Inter-Agency Case Management Platform - Microservices Architecture",
  "private": true,
  "type": "module",
  "keywords": [
    "case-management",
    "government",
    "multi-tenant",
    "workflow",
    "api",
    "microservices"
  ],
  "author": "",
  "license": "ISC",
  "workspaces": [
    "services/*"
  ],
  "scripts": {
    "docker:up": "cd infrastructure && docker-compose up -d postgres redis",
    "docker:down": "cd infrastructure && docker-compose down",
    "docker:all": "cd infrastructure && docker-compose up -d",
    "docker:logs": "cd infrastructure && docker-compose logs -f",
    "prisma:generate": "npx prisma generate",
    "prisma:migrate": "npx prisma migrate deploy",
    "prisma:migrate:dev": "npx prisma migrate dev",
    "prisma:studio": "npx prisma studio",
    "db:seed": "node prisma/seed.js",
    "db:reset": "npx prisma migrate reset --force",
    "setup": "npm run docker:up && timeout /t 5 && npm run prisma:migrate && npm run db:seed"
  },
  "devDependencies": {
    "prisma": "^6.0.0"
  },
  "dependencies": {
    "@prisma/client": "^6.0.0",
    "bcryptjs": "^2.4.3"
  }
}
